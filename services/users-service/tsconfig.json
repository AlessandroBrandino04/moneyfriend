// @ts-ignore
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    // ðŸ“Œ Modifiche Qui:
    "rootDir": ".", // Permettiamo sia la cartella `src` che file a radice (api-gateway server.ts)
    "resolveJsonModule": true // Utile se devi importare file JSON
  },
  // ðŸ“Œ Aggiunto il blocco 'include' per compilare server.ts
  "include": [
    "src/**/*", // Includi tutto ciÃ² che Ã¨ in src
    "server.ts", // Includi esplicitamente il file server.ts nella radice
    "tests/**/*" // Assicurati che includa anche la cartella dei test
  ],
  "exclude": [
    "node_modules"
  ]
}